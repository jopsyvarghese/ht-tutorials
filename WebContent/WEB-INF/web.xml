<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>Hypertrac</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<context-param>
		<description>Location to store uploaded file</description>
		<param-name>file-upload</param-name>
		<param-value>
      		/var/lib/tomcat8/webapps/ROOT/images/service
   </param-value>
	</context-param>
	
	<servlet>
		<servlet-name>fileServlet</servlet-name>
		<servlet-class>com.hypertrac.commons.FileServlet</servlet-class>
		<init-param>
			<param-name>basePath</param-name>
			<param-value>
				<!-- C:/tomcat9/webapps/images/service -->
				/var/lib/tomcat8/webapps/ROOT/images/service
				<!-- /var/lib/tomcat8/webapps/images/service -->
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>fileServlet</servlet-name>
		<url-pattern>/files/*</url-pattern>
	</servlet-mapping>

</web-app>